<h1 class="mb-4 text-center">Importar Boletos</h1>

<%= form_with url: batches_path, method: :post, local: true, enctype: "multipart/form-data" do |form| %>
  <div class="mb-3">
    <%= form.label :file, "Selecione o arquivo CSV", class: "form-label" %>
    <%= form.file_field :file, class: "form-control" %>
    <div class="form-text text-muted">Por favor, selecione um arquivo CSV contendo os boletos para importação.</div>
  </div>
  
  <div class="d-flex justify-content-center">
    <%= form.submit "Importar", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
