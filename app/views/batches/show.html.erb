<div class="container my-4">
  <h1 class="mb-4 text-center">Detalhes do Lote <%= @batch.id %></h1>
  
  <div class="mb-4">
    <span class="badge bg-info">Status: <%= @batch.status %></span>
    <span class="badge bg-secondary">Data de Processamento: <%= @batch.processed_at&.strftime("%d/%m/%Y %H:%M") %></span> <!-- Formatação de data -->
  </div>

  <h2 class="mb-4">Boletos</h2>
  <div class="table-responsive">
    <table class="table table-hover table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Barcode</th>
          <th>Valor</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @boletos.each do |boleto| %>
          <tr>
            <td><%= boleto.barcode %></td>
            <td><%= number_to_currency(boleto.valor) %></td>
            <td>
              <span class="badge <%= boleto.pago? ? 'bg-success' : 'bg-warning' %>">
                <%= boleto.status %>
              </span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-center mt-3">
    <%= link_to 'Voltar para Lotes', batches_path, class: 'btn btn-secondary btn-lg' %>
  </div>
</div>
